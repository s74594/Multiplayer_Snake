<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameSelectionController">
   <children>
      <Button fx:id="exitBTN" layoutX="222.0" layoutY="91.0" mnemonicParsing="false" onAction="#onExitBTNClick" style="-fx-background-color: #e89f02;" text="Exit Game" />
      <Button fx:id="restartBTN" layoutX="10.0" layoutY="91.0" mnemonicParsing="false" onAction="#onRestartGameBTNClick" style="-fx-background-color: #e89f02;" text="Restart Game" visible="false" />
      <Button fx:id="highscoreBTN" layoutX="109.0" layoutY="91.0" mnemonicParsing="false" onAction="#onHigshoreBTNClick" style="-fx-background-color: #e89f02;" text="Show Highscore" />
      <Label layoutX="75.0" layoutY="14.0" text="Game Over!" textFill="#940b0b">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label layoutX="43.0" layoutY="57.0" text="Choose one of the following options." />
   </children>
</AnchorPane>
